header.page-header
	.page-header__inner.inner
		a(href="index.html").logo.page-header__logo
			img(src="img/logo_icon.png" alt="book store" width="127" height="14")
		span.page-header__timetable с 9:00 до 19:00
		.page-header__toggle
			span.page-header__burgerline.burgerline-1.no-animation
			span.page-header__burgerline.burgerline-2.no-animation
			span.page-header__burgerline.burgerline-3.no-animation
		include main-nav.pug
		a(href="#").page-header__cart-wrap
			svg(width="20" height="21").page-header__cart
				use(xlink:href="img/sprite.svg#icon_cart")
		a(href="tel:+79995554433").page-header__phone-wrap
			svg(width="16" height="16").page-header__phone
				use(xlink:href="img/sprite.svg#icon_phone")
